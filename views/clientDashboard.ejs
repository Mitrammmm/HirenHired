<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/clientDashboard.css">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4">Client Dashboard</h1>
        
        <!-- Client Profile Section -->
        <div class="card mb-4">
            <div class="card-body d-flex align-items-center">
                <img src="" alt="Avatar" id="avatar" class="rounded-circle me-3" width="100" height="100">
                <div>
                    <h3 id="fullName"></h3>
                    <p><strong>Username:</strong> <span id="username"></span></p>
                    <p><strong>Email:</strong> <span id="email"></span></p>
                    <p><strong>Location:</strong> <span id="location"></span></p>
                </div>
            </div>
        </div>

        <!-- Nearby Freelancers Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Nearby Freelancers</h4>
            </div>
            <div class="card-body">
                <div id="freelancersList" class="row">
                    <!-- Freelancers will be appended here -->
                </div>
                <div id="noFreelancers" class="text-center text-muted" style="display: none;">
                    <p>No freelancers found nearby.</p>
                </div>
            </div>
        </div>

        <!-- Post New Work Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>Post New Work</h4>
            </div>
            <div class="card-body">
                <form id="postWorkForm">
                    <div class="mb-3">
                        <label for="workTitle" class="form-label">Work Title</label>
                        <input type="text" class="form-control" id="workTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="workDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="workDescription" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post Work</button>
                </form>
            </div>
        </div>

        <!-- Work Listings Section -->
        <div class="card">
            <div class="card-header">
                <h4>Your Work Listings</h4>
            </div>
            <div class="card-body">
                <div id="workList" class="list-group">
                    <!-- Work items will be appended here -->
                </div>
                <div id="noWork" class="text-center text-muted" style="display: none;">
                    <p>No work listed yet.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (for simplicity in AJAX) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/clientDashboard.js"></script>
</body>
</html>
